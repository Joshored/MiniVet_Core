                        <Button fx:id="btnCitas" onAction="#mostrarCitas" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER-LEFT; -fx-padding: 12px 20px;">
                            <graphic>
                                <Label text=" Citas" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </graphic>
                        </Button>

                        <Button fx:id="btnInventario" onAction="#mostrarInventario" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER-LEFT; -fx-padding: 12px 20px;">
                            <graphic>
                                <Label text=" Inventario" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
