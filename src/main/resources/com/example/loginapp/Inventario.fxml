<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginapp.InventarioController">

    <!-- Header -->
    <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #f2a1ae;">
        <padding>
            <Insets bottom="20" left="30" right="30" top="20" />
        </padding>
        <children>
            <Label text="Gesti칩n de Inventario" textFill="WHITE" HBox.hgrow="ALWAYS">
                <font>
                    <Font name="Noto Sans Condensed Bold" size="27.0" />
                </font>
            </Label>

            <TextField fx:id="busquedaProductos" prefWidth="280" promptText="游댌 Buscar producto..." style="-fx-background-color: white; -fx-prompt-text-fill: #999;">
                <font>
                    <Font size="22.0" />
                </font>
            </TextField>
        </children>
    </HBox>

    <!-- Filtros y acciones r치pidas -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #e899a8;">
        <padding>
            <Insets bottom="12" left="30" right="30" top="12" />
        </padding>
        <children>

            <VBox spacing="2">
                <Label style="-fx-font-size: 10px;" text="Categor칤a" textFill="WHITE">
               <font>
                  <Font size="19.0" />
               </font></Label>
                <ComboBox fx:id="filtroCategoria" prefWidth="140" promptText="Todas" style="-fx-background-color: white; -fx-font-size: 12px;" />
            </VBox>

            <VBox spacing="2">
                <Label style="-fx-font-size: 10px;" text="Estado Stock" textFill="WHITE">
               <font>
                  <Font size="19.0" />
               </font></Label>
                <ComboBox fx:id="filtroEstadoStock" prefWidth="140" promptText="Todos" style="-fx-background-color: white; -fx-font-size: 12px;" />
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <Label fx:id="lblStockBajo" style="-fx-background-color: #c45a7d; -fx-padding: 8 15; -fx-background-radius: 5;" text="游닍 Productos con stock bajo: 5" textFill="WHITE">
                <font>
                    <Font name="Noto Sans Condensed Bold" size="18.0" />
                </font>
            </Label>
        </children>
    </HBox>

    <!-- Tabla de productos -->
    <TableView fx:id="tablaProductos" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="columnaCodigo" minWidth="80" prefWidth="80" text="C칩digo" />
            <TableColumn fx:id="columnaNombre" minWidth="180" prefWidth="200" text="Producto" />
            <TableColumn fx:id="columnaCategoria" minWidth="120" prefWidth="130" text="Categor칤a" />
            <TableColumn fx:id="columnaStock" minWidth="80" prefWidth="90" text="Stock" />
            <TableColumn fx:id="columnaStockMinimo" minWidth="100" prefWidth="110" text="Stock M칤nimo" />
            <TableColumn fx:id="columnaPrecioCompra" minWidth="110" prefWidth="120" text="Precio Compra" />
            <TableColumn fx:id="columnaPrecioVenta" minWidth="110" prefWidth="120" text="Precio Venta" />
            <TableColumn fx:id="columnaEstado" minWidth="100" prefWidth="110" text="Estado" />
            <TableColumn fx:id="columnaProveedor" minWidth="130" prefWidth="150" text="Proveedor" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Botones de acci칩n -->
    <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #f6cbd6;">
        <padding>
            <Insets bottom="15" left="30" right="30" top="15" />
        </padding>
        <children>
            <Region HBox.hgrow="ALWAYS" />

            <Button onAction="#nuevoProducto" prefWidth="150" style="-fx-background-color: #9f2d5b; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold;" text="Nuevo Producto">
            <font>
               <Font size="19.0" />
            </font></Button>

            <Button onAction="#verDetalles" prefWidth="120" style="-fx-background-color: #9f2d5b; -fx-text-fill: white; -fx-font-size: 13;" text="Ver Detalles">
            <font>
               <Font size="19.0" />
            </font></Button>

            <Button onAction="#ajustarStock" prefWidth="130" style="-fx-background-color: #c45a7d; -fx-text-fill: white; -fx-font-size: 13;" text="Ajustar Stock">
            <font>
               <Font size="19.0" />
            </font></Button>

            <Button onAction="#eliminarProducto" prefWidth="100" style="-fx-background-color: #e27e8d; -fx-text-fill: white; -fx-font-size: 13;" text="Eliminar">
            <font>
               <Font size="19.0" />
            </font></Button>

            <Region HBox.hgrow="ALWAYS" />
        </children>
    </HBox>

</VBox>
