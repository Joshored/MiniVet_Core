<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="700.0" prefHeight="700.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.loginapp.NuevaVentaController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f2a1ae; -fx-padding: 20;">
            <Label text="Nueva Venta" style="-fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox spacing="15" style="-fx-padding: 30; -fx-background-color: white;">

                <!-- Cliente -->
                <VBox spacing="5">
                    <Label text="Cliente" style="-fx-font-size: 16px; -fx-text-fill: #9f2d5b;" />
                    <ComboBox fx:id="comboCliente" maxWidth="Infinity" promptText="Seleccione cliente" />
                </VBox>

                <!-- Productos -->
                <VBox spacing="5">
                    <Label text="Agregar Productos" style="-fx-font-size: 16px; -fx-text-fill: #9f2d5b;" />
                    <HBox spacing="10">
                        <ComboBox fx:id="comboProducto" promptText="Producto" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="txtCantidad" promptText="Cantidad" prefWidth="100" />
                        <Button fx:id="btnAgregarProducto" text="Agregar" style="-fx-background-color: #9f2d5b; -fx-text-fill: white;" />
                    </HBox>
                </VBox>

                <!-- Tabla -->
                <TableView fx:id="tablaDetalles" prefHeight="250">
                    <columns>
                        <TableColumn fx:id="columnaProducto" text="Producto" prefWidth="250" />
                        <TableColumn fx:id="columnaCantidad" text="Cantidad" prefWidth="90" />
                        <TableColumn fx:id="columnaPrecio" text="Precio" prefWidth="110" />
                        <TableColumn fx:id="columnaSubtotal" text="Subtotal" prefWidth="110" />
                    </columns>
                </TableView>

                <!-- Totales -->
                <VBox spacing="10" style="-fx-background-color: #f6cbd6; -fx-padding: 15;">
                    <HBox spacing="20" alignment="CENTER_RIGHT">
                        <Label text="Subtotal:" style="-fx-font-weight: bold;" />
                        <Label fx:id="lblSubtotal" text="0.00" />
                    </HBox>
                    <HBox spacing="20" alignment="CENTER_RIGHT">
                        <Label text="IVA (16%):" style="-fx-font-weight: bold;" />
                        <Label fx:id="lblIVA" text="0.00" />
                    </HBox>
                    <HBox spacing="20" alignment="CENTER_RIGHT">
                        <Label text="TOTAL:" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                        <Label fx:id="lblTotal" text="0.00" style="-fx-font-size: 18px;" />
                    </HBox>
                </VBox>

                <!-- Método de pago -->
                <VBox spacing="5">
                    <Label text="Método de Pago" style="-fx-font-size: 16px; -fx-text-fill: #9f2d5b;" />
                    <ComboBox fx:id="comboMetodoPago" prefWidth="300" />
                </VBox>

                <!-- Mensaje y botones -->
                <VBox spacing="10" alignment="CENTER">
                    <Label fx:id="mensajeAviso" style="-fx-text-fill: red;" />
                    <HBox spacing="15" alignment="CENTER">
                        <Button fx:id="btnGuardar" text="Guardar Venta" prefWidth="150"
                                style="-fx-background-color: #9f2d5b; -fx-text-fill: white; -fx-font-size: 16px;" />
                        <Button fx:id="btnCancelar" text="Cancelar" prefWidth="120"
                                style="-fx-background-color: #e27e8d; -fx-text-fill: white; -fx-font-size: 16px;" />
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>