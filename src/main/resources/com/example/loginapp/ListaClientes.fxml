<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginapp.ListaClientesController">

    <!-- Header con búsqueda -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #9f2d5b;" BorderPane.alignment="CENTER" spacing="15">
            <padding>
                <Insets top="15" bottom="15" left="20" right="20"/>
            </padding>
            <children>
                <Label text="Lista de Clientes" textFill="WHITE" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="Noto Sans Condensed Bold" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="busquedaClientes" promptText="Buscar cliente..."
                           style="-fx-background-color: #ffffff;" prefWidth="250" maxWidth="300">
                    <font>
                        <Font name="Noto Sans Condensed" size="13.0" />
                    </font>
                </TextField>
            </children>
        </HBox>
    </top>

    <!-- Tabla de clientes -->
    <center>
        <TableView fx:id="tablaClientes" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="ColumnaApellidoP" text="Apellido Paterno" prefWidth="150" minWidth="100"/>
                <TableColumn fx:id="ColumnaApellidoM" text="Apellido Materno" prefWidth="150" minWidth="100"/>
                <TableColumn fx:id="ColumnaTelefono" text="Teléfono" prefWidth="120" minWidth="100"/>
                <TableColumn fx:id="ColumnaEmail" text="E-mail" prefWidth="180" minWidth="150"/>
                <TableColumn fx:id="ColumnaDireccion" text="Dirección" prefWidth="200" minWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Botones de acción -->
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #f6cbd6;" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15" bottom="15" left="20" right="20"/>
            </padding>
            <children>
                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="nuevoCliente" mnemonicParsing="false" onAction="#nuevoClienteOnAction"
                        style="-fx-background-color: #9f2d5b;" text="Nuevo Cliente" textFill="WHITE" prefWidth="130">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>

                <Button fx:id="editarCliente" mnemonicParsing="false" onAction="#editarClienteOnAction"
                        style="-fx-background-color: #9f2d5b;" text="Editar" textFill="WHITE" prefWidth="100">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>

                <Button fx:id="eliminarCliente" mnemonicParsing="false" onAction="#eliminarClienteOnAction"
                        style="-fx-background-color: #9f2d5b;" text="Eliminar" textFill="WHITE" prefWidth="100">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>

                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>